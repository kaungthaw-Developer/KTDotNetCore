@model KTDotNetCore.Mvc.Models.BlogListResponseModel
@{
    int rowCount = 0;
}
<partial name="_ValidateMessage" />
<p>Page Count : @Model.PageCount</p>
<p>Page Row Count : @Model.PageRowCount</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Authoe</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BlogList)
        {
            <tr>
                <td>
                    <a href="/Blog/Edit/@item.Blog_Id" class="btn btn-warning">Edit</a>
                    <a href="/Blog/Delete/@item.Blog_Id" class="btn btn-warning">Delete</a>
                    @* <a href="/Blog/Edit?blogId=@item.Blog_Id" class="btn btn-warning">Edit</a> *@
                </td>
                <th scope="row">@(++rowCount)</th>
                <td>@item.Blog_Title</td>
                <td>@item.Blog_Author</td>
                <td>@item.Blog_Content</td>
            </tr>
        }
    </tbody>
</table>